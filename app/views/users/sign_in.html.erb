<h1>Sign in</h1>

<%= form_tag(do_sign_in_users_path) do %>
<div class="form-group">
  <%= label_tag(:email) %>
  <%= text_field_tag(:email, params[:email], :class => 'form-control') %>
</div>
<div class="form-group">
  <%= label_tag(:password) %>
  <%= password_field_tag(:password, nil, :class => 'form-control') %>
</div>
<div class="form-group">
  <%= submit_tag('Sign in', :class => 'btn btn-default') %>
</div>
<% end %>
