<!DOCTYPE html>
<html>
<head>
  <title>Racing League Charts</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="/">Racing League Charts</a>
  </div>
  <div class="navbar-collapse collapse">
    <ul class="nav navbar-nav nav-default" id="nav">
      <% if @super_leagues %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Leagues <strong class="caret"></strong></a>
        <ul class="dropdown-menu" id="leagues">
        <% @super_leagues.each do |super_league| %>
          <li class="dropdown-header"><%= super_league.name %></li>
          <% super_league.leagues.each do |league| %>
            <li>
              <%= link_to(league_path(league)) do %>
                <span class="glyphicon <%= is_current?(league, @league) %>"></span>
                <%= league.name %>
              <% end %>
            </li>
          <% end %>
        <% end %>
        </ul>
      </li>
      <% end %>
      <% if @seasons %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Seasons <strong class="caret"></strong></a>
        <ul class="dropdown-menu" id="seasons">
        <% @seasons.each do |season| %>
          <li>
            <%= link_to(season_path(season)) do %>
              <span class="glyphicon <%= is_current?(season, @season) %>"></span>
              <%= season.name %>
            <% end %>
          </li>
        <% end %>
        </ul>
      </li>
      <% end %>
      <% if @races %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Races <strong class="caret"></strong></a>
          <ul class="dropdown-menu" id="races">
            <% @races.each do |race| %>
              <li>
                <%= link_to(race_path(race)) do %>
                  <span class="glyphicon <%= is_current?(race, @race) %>"></span>
                  <%= race.name %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
    <ul class="nav navbar-nav navbar-right" style="margin-right:1px">
    <% if current_user %>
      <li class="navbar-text">Signed in as <%= current_user.email %> | <%= link_to('Sign out', sign_out_users_path, :class => 'no-padding-nav') %></li>
    <% else %>
      <li class="navbar-text"><%= link_to('Sign in', sign_in_users_path, :class => 'no-padding-nav') %></li>
    <% end %>
    </ul>
  </div>
</div>

<div id="wrapper">
  <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, :class => bootstrap_alert(name)) %>
  <% end %>
  <%= yield %>
</div>

</body>
</html>
