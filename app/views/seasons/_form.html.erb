<div class="form-group">
  <%= f.label(:name) %>
  <%= f.text_field(:name, :class => 'form-control', :placeholder => 'Name') %>
</div>

<div class="form-group">
  <%= f.label(:league_id, 'League') %>
  <%= f.select(:league_id, options_from_collection_for_select(League.all, "id", "full_name", @season.league_id), {}, { :class => 'form-control' }) %>
</div>

<div class="form-group">
  <%= f.submit('Save', :class => 'btn btn-default') %> <%= link_to('Cancel', :back) %>
</div>

