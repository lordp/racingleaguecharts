<h1>Races</h1>

<p><%= link_to('New Race', new_race_path) %></p>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @races.each do |race| %>
    <tr>
      <td><%= race.name %></td>
      <td><%= link_to('Chart', chart_race_path(race)) %> | <%= link_to('Edit', edit_race_path(race)) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
