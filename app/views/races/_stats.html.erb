<div id="stats_<%= stats[0] %>" class="col-lg-2">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="3"><%= stats[0].capitalize %></th>
      </tr>
    </thead>
    <tbody>
    <% stats[1].each_with_index do |stat, index| %>
      <tr>
        <td><%= (index + 1).ordinalize %></td>
        <td><%= stat[:name] %></td>
        <td><%= stat[:value] %> <%= stat[:units] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
