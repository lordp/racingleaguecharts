<div class="form-group">
  <%= f.label(:token) %>
  <%= f.text_field(:token, :class => 'form-control', :placeholder => 'Token') %>
</div>

<div class="form-group">
  <%= f.label(:session_type) %>
  <%= f.text_field(:session_type, :class => 'form-control', :placeholder => 'Session Type') %>
</div>

<div class="form-group">
  <%= f.label(:driver_id) %> (Not listed? <%= link_to('Add them!', new_driver_path) %>)
  <%= f.select(:driver_id, Driver.all.collect { |d| [d.claimed?, d.id] }, {}, { :class => 'form-control' }) %>
</div>

<div class="form-group">
  <%= f.label(:race_id) %> (Not listed? <%= link_to('Add it!', new_race_path) %>)
  <%= f.select(:race_id, Race.all.collect { |r| [r.full_name, r.id] }, {}, { :class => 'form-control' }) %>
</div>

<div class="checkbox">
  <%= f.label(:winner) do %>
    <%= f.check_box(:winner) %> Winner of the race?
  <% end %>
</div>

<div class="form-group">
  <%= f.label(:track_id) %> (Not listed? <%= link_to('Add it!', new_track_path) %>)
  <%= f.select(:track_id, Track.all.collect { |t| [t.name, t.id] }, {}, { :class => 'form-control' }) %>
</div>

<div class="form-group">
  <h4>Screenshots</h4>
  <% unless @session.new_record? %>
  <p><%= link_to("New screenshot", new_session_screenshot_path(@session)) %></p>
  <% end %>
  <ul>
  <% @session.screenshots.each do |screenshot| %>
    <li><%= link_to(screenshot.image_file_name, edit_session_screenshot_path(@session, screenshot)) %></li>
  <% end %>
  </ul>
</div>

<div class="form-group">
  <%= f.submit('Save', :class => 'btn btn-default') %> <%= link_to('Cancel', sessions_path()) %>
</div>

