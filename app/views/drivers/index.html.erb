<h1>Drivers</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Driver</th>
      <th>Sessions</th>
      <th>Total Laps</th>
    </tr>
  </thead>
  <tbody>
  <% @drivers.each do |driver| %>
    <tr>
      <td><%= link_to(driver.claimed?, driver_path(driver)) %></td>
      <td><%= driver.sessions.size %></td>
      <td><%= driver.laps.size %></td>
    </tr>
  <% end %>
  </tbody>
</table>
