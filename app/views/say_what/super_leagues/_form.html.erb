<div class="form-group">
  <%= f.label(:name) %>
  <%= f.text_field(:name, :class => 'form-control', :placeholder => 'Name') %>
</div>

<div class="checkbox">
  <%= f.label(:disabled) do %>
    <%= f.check_box(:disabled) %> Disabled?
  <% end %>
</div>

<div class="form-group">
  <%= f.submit('Save', :class => 'btn btn-default') %> <%= cancel_link(@super_league) %>
</div>
