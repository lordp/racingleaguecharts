<div class="form-group">
  <%= f.label(:name) %>
  <%= f.text_field(:name, :class => 'form-control', :placeholder => 'Name') %>
</div>

<div class="form-group">
  <%= f.label(:super_league_id, 'Super League') %>
  <%= f.select(:super_league_id, options_from_collection_for_select(SuperLeague.order(:name), "id", "name", @league.super_league_id), {}, { :class => 'form-control' }) %>
</div>

<div class="form-group">
  <%= f.submit('Save', :class => 'btn btn-default') %> <%= cancel_link(@league) %>
</div>
