<h1><%= @session.name %></h1>
<p>Race: <%= @session.race.nil? ? 'None' : @session.race.name %></p>
<h2>Laps</h2>
<div class="panel panel-default">
  <%= render(:partial => 'sessions/session_laps', :locals => { :laps => @session.laps, :session => @session, :fastest => @session.fastest_lap }) %>
</div>

<% if @session.race %><%= link_to("Back to race", say_what_race_path(@session.race)) %> | <% end %><%= link_to('Edit', edit_say_what_session_path(@session)) %> | <%= link_to('Destroy', say_what_session_path(@session), :method => :delete, :data => { :confirm => 'Are you sure?' }) %> | <%= link_to("Back to index", say_what_sessions_path) %>
